/* DROPDOWN */

/* Membuat li menjadi penampung untuk dropdown (agar menu turun di bawahnya) */
.dropdown-kustom {
    position: relative;
    display: inline-block;
}

/* Menyembunyikan dan mengatur posisi menu dropdown */
.dropdown-menu-kustom {
    display: none;
    position: absolute;
    top: 100%;
    left: 50%;
    right: 0;
    transform: translateX(-50%); /* Rata tengah */
    min-width: 150px;
    background-color: #1e3c72; /* Warna latar belakang nav */
    border-radius: 4px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    padding: 5px 0;
    margin-top: 10px; /* Jarak dari tautan utama */
}

/* Menampilkan menu dropdown saat di-hover */
.dropdown-kustom:hover .dropdown-menu-kustom {
    display: block;
}

/* Styling setiap item di dalam dropdown */
.dropdown-item-kustom { /* Menggunakan style dasar yang mirip nav ul li a */
    text-decoration: none;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: bold;
    color: white;
    padding: 10px 20px;
    display: block; /* Agar setiap tautan mengisi lebar penuh dropdown */
    transition: background-color 0.3s;
    opacity: 0.8;
}

.dropdown-item-kustom:hover {
    background-color: #0d284f;
    opacity: 1;
}


.dropdown-toggle-kustom {
    cursor: pointer;
padding: 10px;
}


